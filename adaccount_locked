Try 
{   
    #$LockedOutEvent.message = Get-WinEvent  -FilterHashtable @{LogName='Security';Id=4740} -ErrorAction Stop | Sort-Object -Property TimeCreated -Descending | select -First 1
 
    $LockedOutEvent = Get-EventLog -LogName Security -InstanceId 4740 -Newest 1
    $AccountLockedOut = (($LockedOutEvent.message -split "`r`n")[10] -split "\s")[-1]
    $AccountDisplayName = Get-ADUser -Identity $AccountLockedOut|Select-Object -ExpandProperty Name
} 
Catch  
{           
    $AccountLockedOut = "Not Found"
 
}#end catch    
 
[Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12


$username   = ''
$password   = ''
$secstr     = ConvertTo-SecureString $password -AsPlainText -Force
$recippients = ""
#$recippients = ""

$hash = @{
    to         = $recippients
    from    = ""
    subject =  "【嚴重】使用者 $AccountDisplayName AD 帳戶已被DC1鎖定 !"
    smtpserver = ""
    port       = "587"
    body       = @"
<HTML>
<P><FONT face=微軟正黑體>使用者 <FONT color=#ff0000>$AccountDisplayName </FONT> AD 帳戶已被鎖定 !</FONT></P>
<P><FONT face=微軟正黑體>作為系統日常監控的一部分，我們發現此帳戶因登入錯誤(密碼)導致帳戶已被鎖定。<BR>請立即檢查登入帳戶是否設定有誤，如非本人操作請與管理員確認處理，謝謝~</FONT></P>
</HTML>
"@
#"User $AccountDisplayName AD account has been locked by DC2 !"
    BodyAsHtml = $true
    credential = new-object -typename System.Management.Automation.PSCredential -argumentlist $username, $secstr
	Encoding   = New-Object System.Text.UTF8Encoding
   usessl = $true
}
 
Send-MailMessage @hash
